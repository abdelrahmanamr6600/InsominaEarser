<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.LibraryFragment">

    <LinearLayout
        android:id="@+id/books_shimmer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:weightSum="6"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/ed_search"
        app:layout_constraintStart_toStartOf="@id/ed_search"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/book_card_shimmer" />
        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/book_card_shimmer" />
        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            layout="@layout/book_card_shimmer" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/search_box_background"
        android:hint="@string/type_book_name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/_10sdp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/book_Rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_search"
        app:layout_constraintStart_toEndOf="@id/ed_search"
        app:layout_constraintBottom_toBottomOf="@id/ed_search"
        app:layout_constraintTop_toTopOf="@id/ed_search"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_Rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/ed_search" />

</androidx.constraintlayout.widget.ConstraintLayout>