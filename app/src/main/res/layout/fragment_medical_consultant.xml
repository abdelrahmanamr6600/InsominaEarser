<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg"
    tools:context=".ui.fragments.MedicalConsultantFragment">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15ssp"
        android:text="@string/fill_out_the_form_below_to_receive_your_diagnosis_results"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:textStyle="bold"
        android:fontFamily="@font/source"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/age_tv"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_40sdp"
      android:hint="Age"
      android:textColorHint="@color/black"
      android:padding="@dimen/_6sdp"
      app:layout_constraintTop_toBottomOf="@id/title_tv"
      android:background="@drawable/edit_text_style"
      android:layout_marginTop="@dimen/_15sdp"
      android:layout_marginStart="@dimen/_10sdp"
      android:layout_marginEnd="@dimen/_10sdp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

    <EditText
        android:id="@+id/SleepDuration_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Sleep Duration"
        android:textColorHint="@color/black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/age_tv"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/quality_ofSleep_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Quality of Sleep"
        android:textColorHint="@color/black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/SleepDuration_tv"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <EditText
        android:id="@+id/activity_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Physical Activity Level"
        android:textColorHint="@color/black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/quality_ofSleep_tv"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/stressLevel_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Stress Level"
        android:textColorHint="@color/black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/activity_tv"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <EditText
        android:id="@+id/bmi_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="BMI Category"
        android:textColorHint="@color/black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/stressLevel_tv"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/heartRate_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Heart Rate"
        android:textColorHint="@color/black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/bmi_tv"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/daily_steps_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:hint="Daily Steps"
        android:textColorHint="@color/black"
        android:padding="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/heartRate_tv"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/check_btn"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/btn_style"
        android:text="@string/check_btn"
        android:focusableInTouchMode="false"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daily_steps_tv" />

  <pl.droidsonroids.gif.GifImageView
      android:id="@+id/loading_gif"
      android:layout_width="@dimen/_70sdp"
      android:layout_height="@dimen/_70sdp"
      android:layout_marginTop="@dimen/_15sdp"
      android:src="@drawable/loading_anim"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/daily_steps_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>